# Database
DATABASE_URL="postgresql://username:password@localhost:5432/sapyyn_db"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRE="7d"

# Server
PORT=5000
NODE_ENV="development"

# Email
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Twilio
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="your-twilio-phone-number"

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH="/uploads"

# External APIs
TANGO_API_KEY="your-tango-api-key"
TANGO_BASE_URL="https://api.tangocard.com"

TREMENDOUS_API_KEY="your-tremendous-api-key"
TREMENDOUS_BASE_URL="https://api.tremendous.com"

# Zapier
ZAPIER_WEBHOOK_URL="your-zapier-webhook-url"

# N8N
N8N_WEBHOOK_URL="your-n8n-webhook-url"

# SMS-IT
SMS_IT_API_KEY="your-sms-it-api-key"
SMS_IT_BASE_URL="https://api.sms-it.com"

# Stripe (for payments if needed)
STRIPE_SECRET_KEY="your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"

# Frontend URLs
MAIN_WEBSITE_URL="http://localhost:3000"
PORTAL_URL="http://localhost:3001"
ADMIN_URL="http://localhost:3002"

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Encryption
ENCRYPTION_KEY="your-32-character-encryption-key"